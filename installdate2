              <td class="text-xs text-base-content p-1">
                <input type="text" placeholder="安装日期" readonly="" class="input input-xs w-full bg-transparent border-none p-1 text-xs focus:bg-base-100 focus:border-primary">
              </td>
              <td class="text-xs text-base-content p-1">
                <input type="text" placeholder="包工" readonly="" class="input input-xs w-full bg-transparent border-none p-1 text-xs focus:bg-base-100 focus:border-primary">
              </td>
              <td class="text-xs text-base-content p-1">
                <input type="text" placeholder="收工" readonly="" class="input input-xs w-full bg-transparent border-none p-1 text-xs focus:bg-base-100 focus:border-primary">
